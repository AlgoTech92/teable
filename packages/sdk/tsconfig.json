{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist",
    "composite": true,
    "sourceMap": true,
    "incremental": true,
    "paths": {
      "@/context/*": ["./context/*"],
      "@/config/*": ["./config/*"],
      "@/component/*": ["./component/*"],
      "@/engine/*": ["./engine/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/models/*": ["./models/*"]
    }
  },
  "references": [{ "path": "../core" }],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"],
  "include": ["./src"]
}
