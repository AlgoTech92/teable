{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@teable-group/ts-utils": ["../../../packages/ts-utils/src/index"],
      "@teable-group/db-main-prisma": ["../../../packages/db-main-prisma/src/index"],
      "@/context/*": ["./context/*"],
      "@/config/*": ["./config/*"],
      "@/component/*": ["./component/*"],
      "@/engine/*": ["./engine/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/models/*": ["./models/*"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}
