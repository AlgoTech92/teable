{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["esnext"],
    "noEmit": false,
    "incremental": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}
